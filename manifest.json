{
  "manifest_version": 3,
  "name": "Fokus Plugin",
  "version": "1.0",
  "description": "Pomodoro Timer, der Fokus- und Pausenphasen anzeigt.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms"]
}
